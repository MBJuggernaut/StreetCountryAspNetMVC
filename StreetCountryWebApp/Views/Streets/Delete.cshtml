@model StreetCountryWebApp.Models.Street
@{
    ViewBag.Title = "Deleting confirmation";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div>
        <form asp-controller="Streets" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Confirm Deleting" />
            </div>
        </form>
    </div>
</div>