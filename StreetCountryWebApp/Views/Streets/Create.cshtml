@model StreetCountryWebApp.Models.Street
@{
    ViewBag.Title = "Creating street";
}
<form asp-action="create" asp-controller="streets">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CountryId" class="control-label">Country Id</label>
        <input type="number" asp-for="CountryId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>